{
  "name": "OctoTray",
  "private": true,
  "version": "1.3.0",
  "description": "A menubar application to work with and monitor an OctoPrint server",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV='production' electron .",
    "start:dev": "concurrently \"npm run build:rollup:watch\" \"NODE_ENV=development electron .\"",
    "build": "npm run build:rollup",
    "build:rollup": "rollup -c",
    "build:rollup:watch": "rollup -c -w",
    "package": "npm run build && electron-builder .",
    "prettier": "prettier --write src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "directories": {
      "buildResources": "Resources/"
    },
    "mac": {
      "target": "dmg"
    },
    "files": [
      "package.json",
      "public/**/*",
      "src/main/**/*",
      "index.js",
      "Resources/MenuIcon*.png",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asar": true
  },
  "author": "Jakob Westhoff <jakob@westhoffswelt.de> (http://westhoffswelt.de)",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "concurrently": "^5.2.0",
    "electron": "^9.3.1",
    "electron-builder": "^22.6.1",
    "electron-packager": "^14.2.1",
    "prettier": "^2.0.5",
    "rollup": "^2.10.9",
    "rollup-plugin-amd": "^4.0.0",
    "rollup-plugin-css-porter": "^1.0.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-svelte": "^5.2.2",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-terser": "^6.1.0",
    "svelte": "^3.22.3",
    "@fortawesome/fontawesome-free": "^5.13.0",
    "devtron": "^1.4.0",
    "electron-reload": "^1.5.0",
    "milligram": "^1.3.0",
    "normalize.css": "^8.0.1"
  },
  "dependencies": {
    "menubar": "^8.0.2",
    "electron-store": "^5.1.1",
    "electron-unhandled": "^3.0.2",
    "esm": "^3.2.25",
    "node-fetch": "^2.6.7",
    "serialize-error": "^7.0.1",
    "uuid": "^8.1.0",
    "lodash": "^4.17.19"
  }
}
